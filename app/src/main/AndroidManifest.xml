<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gspot.com.sportify">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:label="@string/app_name"
        android:name=".SportifyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controller.StarterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Controller.LoginActivity" android:theme="@style/AppTheme" />
        <activity android:name=".Controller.SignupActivity" android:theme="@style/AppTheme" />
        <activity android:name=".Controller.GatheringListActivity" android:theme="@style/AppTheme" />
        <activity
            android:name=".Controller.GatheringPagerActivity" android:label="@string/app_name"
            android:parentActivityName=".Controller.GatheringListActivity">
        </activity>

        <activity
            android:name=".Controller.ProfileActivity"
            android:label="@string/title_activity_view_profile"
            android:theme="@style/Theme.AppCompat"
            android:windowSoftInputMode="adjustPan"></activity><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>