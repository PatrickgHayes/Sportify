<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gspot.com.sportify">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:label="@string/app_name"
        android:name=".SportifyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Test">
        <activity android:name=".Controller.StarterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Controller.LoginActivity" android:theme="@style/Test" />
        <activity android:name=".Controller.SignupActivity" android:theme="@style/Test" />
        <activity android:name=".Controller.GatheringListActivity" android:theme="@style/Test" />
        <activity
            android:name=".Controller.GatheringPagerActivity" android:label="@string/app_name"
            android:parentActivityName=".Controller.GatheringListActivity">
        </activity>

        <activity
            android:name=".Controller.ProfileActivity" android:label="@string/title_activity_view_profile" android:theme="@style/Test"></activity>

        <activity android:name=".Controller.ForgotPasswordActivity" android:theme="@style/Test" />
        <activity android:name=".Controller.ChangePasswordActivity" android:theme="@style/Test" />
    </application>

</manifest>