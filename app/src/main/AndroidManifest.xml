<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gspot.com.sportify">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:label="@string/app_name"
        android:name=".SportifyApplication">
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Controller.LoginActivity" android:theme="@style/AppTheme" />
        <activity android:name=".Controller.SignupActivity" android:theme="@style/AppTheme" />
        <activity android:name=".Controller.SportListActivity" android:theme="@style/AppTheme" />
        <activity
            android:name=".Controller.SportPagerActivity" android:label="@string/app_name"
            android:parentActivityName=".Controller.SportListActivity">
        </activity>


    </application>

</manifest>