<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/header">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:id="@+id/profile_picture"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/profile_default"
                    android:paddingTop="20dp"
                    android:padding="10dp"
                    android:contentDescription="ProfilePicture" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Name"
                        android:id="@+id/user_name"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="text" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:gravity="center_vertical|center_horizontal"
                        android:minWidth="100dp"
                        android:id="@+id/edit_save_button" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Bio"
                android:id="@+id/bio_title"
                android:layout_gravity="center_horizontal|left" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/bio_content"
                android:text="Write a short description of yourself" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Contact"
                android:id="@+id/contact_title" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact_content"
                android:text="How would you like people to contact you?"
                android:inputType="textMultiLine|textLongMessage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Availability"
                android:id="@+id/availability_title" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/availability_matrix"
                android:layout_margin="2dp"
                android:gravity="center_horizontal">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Sun"
                        android:id="@+id/textView"
                        android:layout_column="2"
                        android:paddingRight="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Mon"
                        android:id="@+id/textView6"
                        android:layout_column="3"
                        android:paddingRight="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Tue"
                        android:id="@+id/textView7"
                        android:layout_column="4"
                        android:paddingRight="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Wed"
                        android:id="@+id/textView8"
                        android:layout_column="5"
                        android:paddingRight="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Thu"
                        android:id="@+id/textView9"
                        android:layout_column="6"
                        android:paddingRight="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Fri"
                        android:id="@+id/textView10"
                        android:layout_column="7"
                        android:paddingRight="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Sat"
                        android:id="@+id/textView11"
                        android:layout_column="8"
                        android:paddingRight="5dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Morning"
                        android:id="@+id/morning"
                        android:layout_column="1" />

                    <ImageView android:id="@+id/sun_morning"
                        android:layout_column="2"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/mon_morning"
                        android:layout_column="3"
                        android:contentDescription="Monday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/tue_morning"
                        android:layout_column="4"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/wed_morning"
                        android:layout_column="5"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/thu_morning"
                        android:layout_column="6"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/fri_morning"
                        android:layout_column="7"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/sat_morning"
                        android:layout_column="8"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/busy"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Afternoon"
                        android:id="@+id/afternoon"
                        android:layout_column="1" />

                    <ImageView android:id="@+id/sun_afternoon"
                        android:layout_column="2"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/mon_afternoon"
                        android:layout_column="3"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/tue_afternoon"
                        android:layout_column="4"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/wed_afternoon"
                        android:layout_column="5"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/thu_afternoon"
                        android:layout_column="6"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/fri_afternoon"
                        android:layout_column="7"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/sat_afternoon"
                        android:layout_column="8"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/busy"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evening"
                        android:id="@+id/evening"
                        android:layout_column="1" />

                    <ImageView android:id="@+id/sun_evening"
                        android:layout_column="2"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/mon_evening"
                        android:layout_column="3"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/tue_evening"
                        android:layout_column="4"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/wed_evening"
                        android:layout_column="5"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/thu_evening"
                        android:layout_column="6"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/fri_evening"
                        android:layout_column="7"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/sat_evening"
                        android:layout_column="8"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/busy"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Night"
                        android:id="@+id/night"
                        android:layout_column="1" />

                    <ImageView android:id="@+id/sun_night"
                        android:layout_column="2"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/mon_night"
                        android:layout_column="3"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/tue_night"
                        android:layout_column="4"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/wed_night"
                        android:layout_column="5"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/thu_night"
                        android:layout_column="6"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/fri_night"
                        android:layout_column="7"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/available"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />

                    <ImageView android:id="@+id/sat_night"
                        android:layout_column="8"
                        android:contentDescription="Sunday_Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@color/busy"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:layout_margin="2dp" />
                </TableRow>

            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sports"
                android:id="@+id/sports" />


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Sport!"
                android:id="@+id/add_sport"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal" />

</LinearLayout>